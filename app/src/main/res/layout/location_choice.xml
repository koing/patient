<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="140.0dp"
        android:layout_height="match_parent"
        android:id="@id/lv_location_level1"
        android:background="@color/gray_ee"
        android:paddingBottom="20.0dp"
        style="@style/listview"
        />

    <ListView
        android:id="@id/lv_location_level2"
        android:background="@color/white"
        android:paddingBottom="20.0dp"
        style="@style/listview"
        android:layout_toRightOf="@id/lv_location_level1"
        android:listSelector="#00000000"
        android:dividerHeight="0.0dp"
        />
    <include layout="@layout/noinfo"
        android:id="@id/noinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>